<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:alert] %>
<%= flash[:notice] %>

<div class='container'>
  <div class='row'>
    <h1><%= image_tag('app_header_image.jpg', class: 'pull-left padding-right', width: '250') %><b>Share Your Photos!</b></h1>
    <h4><span class="smaller">Current user:&nbsp&nbsp</span>
      <% if current_user.nil? %>
        <u>No user logged in yet</u>
      <% else %>
        <%= current_user.email %>
      <% end %>
  </div><br>

<%= yield %>

</div>
</body>
</html>
